{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react-native",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "react-native"],
    "baseUrl": "./src"
  },
  "extends": "expo/tsconfig.base",
  "include": ["./src", "App.tsx"],
  "exclude": ["node_modules"]
}
